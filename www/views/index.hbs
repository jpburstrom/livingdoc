<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<ul>
{{#each services}}
<li class="{{status}}"><span><strong>{{description}}</strong> is <em>{{status}}</em>. </span>
<a class="enable" href="?action=enable&service={{name}}">Enable</a>
<a class="disable" href="?action=disable&service={{name}}">Disable</a>
<a href="?action=stop&service={{name}}">Stop</a>
<a href="?action=restart&service={{name}}">Restart</a>
</li>

{{/each}}
</ul>
